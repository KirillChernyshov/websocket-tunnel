{
  "name": "tunnel-client", 
  "script": "dist/client/index.js",
  "instances": 1,
  "exec_mode": "fork",
  "watch": false,
  "max_memory_restart": "512M",
  "env_file": ".env",
  "env": {
    "NODE_ENV": "production"
  },
  "error_file": "./logs/client-error.log",
  "out_file": "./logs/client-out.log", 
  "log_file": "./logs/client-combined.log",
  "time": true,
  "restart_delay": 5000,
  "max_restarts": 15,
  "min_uptime": "5s",
  "exp_backoff_restart_delay": 100
}