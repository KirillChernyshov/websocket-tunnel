{
  "name": "websocket-tunnel",
  "version": "1.0.0",
  "description": "WebSocket tunnel for routing requests from work server to local PC",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc || (echo '⚠️  TypeScript compilation had errors, but dist files were generated' && exit 0)",
    "dev:server": "ts-node src/server/index.ts",
    "dev:client": "ts-node src/client/index.ts",
    "dev:test-server": "ts-node test/local-server.ts",
    "start:server": "node dist/server/index.js",
    "start:client": "node dist/client/index.js",
    "test": "npm run dev:test-server",
    "test:integration": "node test/integration-test.js",
    "type-check": "tsc --noEmit",
    "lint": "tsc --noEmit --pretty",
    "pm2:server": "pm2 start ecosystem.config.json",
    "pm2:client": "pm2 start ecosystem.client.json",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "pm2:monitor": "pm2 monit",
    "pm2:delete": "pm2 delete all",
    "deploy:server": "npm run build && pm2 start ecosystem.config.json",
    "deploy:client": "npm run build && pm2 start ecosystem.client.json"
  },
  "keywords": [
    "websocket",
    "tunnel",
    "proxy",
    "reverse-proxy"
  ],
  "author": "Kirill",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^2.6.7",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.4",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
